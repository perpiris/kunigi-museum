@model CreateTeamViewModel

@{
    ViewData["Title"] = "Δημιουργία νέας ομάδας";
    ViewData["BannerTitle"] = "Δημιουργία νέας ομάδας";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create" asp-controller="Team" method="post">
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" maxlength="255"/>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="mb-3">
                                <label asp-for="IsActive" class="form-label"></label>
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox"/>
                                    <label class="form-check-label" asp-for="IsActive"></label>
                                </div>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-controller="Team" asp-action="Manage" class="btn btn-light">Πίσω</a>
                        <button type="submit" class="btn btn-primary">Αποθήκευση</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}